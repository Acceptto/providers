{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@entrypoint": ["./index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
