{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "isolatedModules": false,
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
